{
  "name": "@fivetrandevelopers/zetasql",
  "description": "ZetaSQL gRPC server and client",
  "version": "1.4.0",
  "publisher": "Fivetran",
  "license": "MIT",
  "keywords": [
    "ZetaSQL",
    "BigQuery",
    "SQL",
    "gRPC"
  ],
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/fivetran/zetasql-npm.git"
  },
  "homepage": "https://github.com/fivetran/zetasql-npm#readme",
  "dependencies": {
    "@grpc/grpc-js": "^1.6.10",
    "@grpc/proto-loader": "^0.7.2",
    "@types/ffi-napi": "^4.0.5",
    "@types/long": "^4.0.2",
    "@types/ref-napi": "^3.0.4",
    "ffi-napi": "^4.0.3"
  },
  "devDependencies": {
    "@types/mocha": "^9.1.1",
    "@types/node": "^18.7.13",
    "@typescript-eslint/eslint-plugin": "^5.35.1",
    "@typescript-eslint/parser": "^5.35.1",
    "eslint": "^8.23.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-sonarjs": "^0.15.0",
    "hamjest": "^3.7.3",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "mocha": "^10.0.0",
    "prettier": "^2.7.1",
    "prettier-plugin-organize-imports": "^3.1.0",
    "source-map-support": "^0.5.21",
    "ts-mockito": "^2.6.1",
    "typescript": "^4.8.2"
  },
  "scripts": {
    "build": "tsc -b",
    "watch": "tsc -b -w",
    "build:proto": "proto-loader-gen-types --defaults --oneofs --grpcLib=@grpc/grpc-js --includeDirs=src/protos --outDir=src/types local_service.proto",
    "prebuild": "npm run build:proto",
    "build:server": "mkdir -p lib/zetasql && tar -xzvf zetasql/darwin-x86-64/libremote_server.dylib.tar.gz -C lib/zetasql/ && tar -xzvf zetasql/darwin-arm-64/libremote_server_arm.dylib.tar.gz -C lib/zetasql/ && tar -xzvf zetasql/linux-x86-64/libremote_server.so.tar.gz -C lib/zetasql/ && tar -xzvf zetasql/linux-arm-64/libremote_server_arm.so.tar.gz -C lib/zetasql/ && cp -R src/protos/ lib/protos/",
    "build:all": "npm run build:server && npm run lint && npm run build",
    "test": "mocha",
    "lint": "eslint --cache --no-fix --ext .ts src",
    "lint:fix": "eslint --cache --fix --ext .ts src",
    "prepare": "husky install"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "package.json",
    "lib/**/*",
    "!lib/test/**/*",
    "!lib/TestZetaSqlServer*"
  ],
  "lint-staged": {
    "*.ts": [
      "eslint --cache --ext .ts --fix src"
    ]
  }
}
