  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Server Jest Tests",
      "type": "node",
      "request": "launch",
      "runtimeArgs": [
        "--inspect-brk",
        "node_modules/.bin/jest",
        "--runInBand",
        "--config",
        "jestconfig.json"
